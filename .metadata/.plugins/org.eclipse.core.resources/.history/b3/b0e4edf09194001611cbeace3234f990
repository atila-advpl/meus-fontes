#include 'protheus.ch'
#include 'parmtype.ch'

#define ENTER Chr(13)+Chr(13)

user function test_advpl_function()
	Local aArea := GetArea()
	Local aLista := {1, 5, 2, 4, 3, 6}
	Local nCnt
	Local nCnt2
	Local nMin
	Local nMenor

	//busca modo de seleção
	For nCnt := 1 to Len(aLista) - 2

		nMin := nCnt
		
		Alert( " valor Min: " + cValToChar(nMin))
		
		For nCnt2 := nCnt+1 to Len(aLista) - 1
			
			If aLista[nCnt2] < aLista[nMin]
				nMin := nCnt2
			EndIf
			
			nMenor := aLista[nMin]
			aLista[nMin] := aLista[nCnt]
			aLista[nCnt] := nMenor
	
		Next nCnt2
	Next nCnt

	For nCnt := 1 to Len(aLista)
		Alert(aLista[nCnt])
	Next nCnt

	RestArea(aArea)
return